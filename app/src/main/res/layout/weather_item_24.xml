<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/line_two"
        android:layout_width="0.2dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#28ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.xszn.ime.widget.weatherview.TemperatureView24
            android:id="@+id/ttv_day24"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/iv_night_weather"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_night_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="晴"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_wind_ori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="西南风"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_wind_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="3级"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_7"
            android:layerType="software"
            android:background="@drawable/weather_24_line_stroke" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_1"
            android:layerType="software"
            android:background="@drawable/weather_24_line_vertical"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>